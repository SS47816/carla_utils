<launch>

  <!-- Joystick Teleop -->
  <node pkg="joy" type="joy_node" name="joy_node" respawn="true" >
    <param name="dev"                         value="/dev/input/js0" />
    <param name="deadzone"                    value="0.05" />
    <param name="autorepeat_rate"             value="20" />
  </node>

  <node ns="lgsvl_utils" pkg="lgsvl_utils" type="joystick_node" name="joystick_node" output="screen" >
    <param name="control_setting"             value="ForzaHorizon" />
    <param name="joy_type"                    value="Xbox" />
    <param name="joy_topic"                   value="/joy" />
    <param name="autonomous_cmd_topic"        value="/cmd_vel" />
    <param name="cmd_vel_out_topic"           value="/cmd_vel_out" />
    <param name="vehicle_cmd_topic"           value="/vehicle_cmd" />
    <!-- <param name="health_monitor_topic"        value="/health_monitor" /> -->
    <param name="max_speed_fwd"               value="30" />
    <param name="max_speed_rev"               value="15" />
    <param name="max_speed_fwd_allowed"       value="20" />
    <param name="max_speed_rev_allowed"       value="10" />
    <param name="max_steering_angle"          value="45.0" />
    <param name="max_steering_angle_allowed"  value="35.0" />
  </node>

</launch>